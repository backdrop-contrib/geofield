      'type' => 'decimal',
      'setter callback' => 'entity_plus_property_verbatim_set',
      'microdata' => FALSE,
    ),
    'srid' => array(
      'label' => 'Projection (SRID)',
      'type' => 'integer',
      'microdata' => FALSE,
    ),
    'latlon' => array(
      'label' => 'LatLong Pair',
      'type'  => 'string',
      'getter callback' => 'geofield_return_latlon',
      'microdata' => FALSE,
    ),
    'schemaorg_shape' => array(
      'label' => 'Schema.org Shape',
      'type' => 'string',
      'getter callback' => 'geofield_return_schemaorg_shape',
      'microdata' => TRUE,
    ),
  );

  // Add the default values for each of the geofield properties.
  foreach ($properties as $key => &$value) {
    $value += array(
      'description' => !empty($name) ? t('!label of field %name', array('!label' => $value['label'], '%name' => $name)) : '',
      'getter callback' => 'entity_plus_property_verbatim_get',
    );
  }

  return $properties;
}
